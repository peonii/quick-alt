{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ES6",
        "noImplicitAny": true,
        "strict": true,
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
    },
    "include": [
        "src/**/*"
    ]
}